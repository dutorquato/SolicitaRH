@model IEnumerable<SolicitaRH.Models.Categoria>

@{
    ViewBag.Title = "Categorias";
    var Mensagem = TempData["Mensagem"];
}

<h2>@ViewBag.Title</h2>

<!-- Cadastrar -->
<p>
    <button type="button" class=" btn btn-primary btn-small" onclick="location.href='@Url.Action("Create","Categoria")'">
        <i class="icon-plus icon-white icone "></i> Cadastrar
    </button>
</p>

<!-- Tabela de dados -->
<table width="100%">
    <tr>
        <th>
            Nome
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td style="width:70%">
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            <button type="button" class=" btn btn-info btn-mini" onclick="location.href='@Url.Action("Details", "Categoria", new { id = item.CategoriaId })'">
                <i class="icon-tasks icon-white icone"></i> Detalhes
            </button>
            <button type="button" class=" btn btn-warning btn-mini" onclick="location.href='@Url.Action("Edit", "Categoria", new { id = item.CategoriaId })'">
                <i class="icon-wrench icon-white icone"></i> Editar
            </button>
                <button type="button" class=" btn btn-danger btn-mini" onclick="location.href='@Url.Action("Delete", "Categoria", new { id = item.CategoriaId })'">
                <i class="icon-remove icon-white icone"></i> Excluir
            </button>
        </td>
    </tr>
}

</table>

<script>
    $(document).ready(function () {
        
        @if (Mensagem != null && Mensagem != "") {
            @: ExibeMensagem("@Mensagem", "Sucesso");
        }
    });
</script>
