<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" >
    <title>Solicita Help Desk :: @ViewBag.Title</title>

    <base href="@Url.Content("~/")" />
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Scripts/bootstrap/css/bootstrap.min.css")" rel="stylesheet" media="screen" />
    <link href="@Url.Content("~/Scripts/jquery-tags/jquery.tagsinput.css")" type="text/css" rel="stylesheet" />
    <link href="@Url.Content("~/Scripts/jquery-ui/css/request-default/jquery-ui-1.10.0.custom.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/rateit.css")" rel="stylesheet" />
    
    <link href="@Url.Content("~/Content/tipsy.css")" rel="stylesheet" /> <!-- tipsy -->

    <script src="@Url.Content("~/Scripts/jquery-1.9.1.js")" type="text/javascript"></script>

    @*HighCharts*@
    <script type="text/javascript" src="@Url.Content("~/Scripts/bootstrap/js/bootstrap.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/js/highcharts.js")"></script>

    <script src="@Url.Content("~/Scripts/modernizr-2.5.3.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/MicrosoftAjax.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/MicrosoftMvcAjax.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/uaise.optionGroups.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/uaise.modal.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.meio.mask.min.js")" type="text/javascript"></script>

    <script type="text/javascript" src="@Url.Content("~/Scripts/jquery.tipsy.js")"></script> <!-- tipsy -->

    <script src="@Url.Content("~/Scripts/jquery-tags/jquery.tagsinput.js")" type="text/javascript"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/jquery-progressbar/js/jquery.progressbar.js")"></script>

    <script type="text/javascript" src="@Url.Content("~/Scripts/jquery-ui/js/jquery-ui-1.10.0.custom.min.js")"></script>

    <script type="text/javascript" src="@Url.Content("~/Content/dropdown-checklist/js/ui.dropdownchecklist-1.4-min.js")"></script><!-- Dropdown-checklist -->
   
    <script src="@Url.Content("~/Scripts/SolicitaRH.js")" type="text/javascript"></script>
    <link href="@Url.Content("~/Content/themes/SolicitaRH/SolicitaRH.css")" type="text/css" rel="stylesheet" />


    

    <!--<script type="text/javascript" src="~/Scripts/ckeditor/adapters/jquery.js"></script>-->

    <script type="text/javascript" src="~/Scripts/highcharts/data.js"></script>
    <!-- Additional files for the Highslide popup effect -->
    <script type="text/javascript" src="~/Scripts/highcharts/highslide-full.js"></script>
    <script type="text/javascript" src="~/Scripts/highcharts/highslide.config.js" charset="utf-8"></script>

    <link rel="stylesheet" type="text/css" href="~/Scripts/highcharts/highslide.css" />
</head>

<body>
    <div id="loader">Atualizando</div>

    <!-- Topo -->
    @Html.Action("_Topo", "Layout")


    <!-- GERAL/CONTEUDO -->
    <div class="full">
        <div class="geral">
            <div class="menu-principal">
                <ul class="menu">
                    <li><p>Chamados</p>
                        <ul class="sub-menu">
                            <li><a href="@Url.Action("Create", "Chamado")"> - Novo chamado</a></li>
                            <li><a href="@Url.Action("Index", "Chamado")"> - Listar chamados</a></li>
                            @{
                                List<SolicitaRH.Models.Etapa> etapas = SolicitaRH.Funcoes.Geral.PegaEtapas();   
                            }
                            @foreach (SolicitaRH.Models.Etapa item in etapas) { 
                                <li><a href="@Url.Action("Index", "Chamado", new { EtapaId = item.EtapaId })"> - @item.Nome</a></li>
                            }
                        </ul>
                    </li>
                    <li><p>Usuário</p>
                        <ul class="sub-menu">
                            <li><a href="@Url.Action("Edit", "Usuario", new { id = SolicitaRH.Funcoes.Sessao.UsuarioId })">- Atualizar dados</a></li>
                            <li><a href="@Url.Action("TrocaSenha", "Usuario", new { id = SolicitaRH.Funcoes.Sessao.UsuarioId })">- Trocar senha</a></li>
                        </ul>
                    </li>
                    @if( SolicitaRH.Funcoes.Sessao.Administrador ){
                        <li><p>Configurações</p>
                            <ul class="sub-menu">
                                <li><a href="@Url.Action("Index", "Usuario")">- Usuários</a></li>
                                <li><a href="@Url.Action("Index", "Celula")">- Células</a></li>
                                <li><a href="@Url.Action("Index", "Categoria")">- Categorias</a></li>
                                <li><a href="@Url.Action("Index", "Topico")">- Tópicos</a></li>
                                <li><a href="@Url.Action("Index", "Etapa")">- Etapas</a></li>
                                <li><a href="@Url.Action("Index", "Acao")">- Ações</a></li>
                            </ul>
                        </li>
                        <li><p>Gráficos e relatórios</p>
                            <ul class="sub-menu">
                                <li><a href="@Url.Action("Index", "Grafico")">- Acompanhamento</a></li>
                                <li><a href="@Url.Action("Index", "Relatorio")">- Gerar relatórios</a></li>
                            </ul>
                        </li>
                    }
                </ul>
            </div>
            <div class="conteudo">
                @RenderBody()
            </div>
        </div>
    </div>

    <!-- RODAPE -->
    <div class="full rodape">
        @*<div class="geral">
            Texto
        </div>*@
    </div>

    <script src="@Url.Content("~/Scripts/jquery.rateit.min.js")" type="text/javascript"></script>
</body>
</html>
