@model SolicitaRH.Models.Celula

@{
    ViewBag.Title = "Excluir célula";
}

<h2>@ViewBag.Title</h2>

<h3>Tem certeza que deseja excluir este registro?</h3>

<div class="display-label">Nome: <strong>@Model.Nome</strong></div>

<div class="display-label">Prioridade: <strong>@Model.Prioridade</strong></div>

@using (Html.BeginForm()) {
    <p>
        <br />
        <input type="submit" value="Excluir" class="btn btn-warning" />
                
        <button type="button" class=" btn btn-inverse " onclick="location.href='@Url.Action("Index", "Celula")'">
            <i class="icon-arrow-left icon-white icone "></i> Voltar
        </button>
    </p>
}
