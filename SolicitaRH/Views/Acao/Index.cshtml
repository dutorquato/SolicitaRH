@model IEnumerable<SolicitaRH.Models._Acao>

@{
    ViewBag.Title = "Ações";
    var Mensagem = TempData["Mensagem"];
}

<h2>@ViewBag.Title</h2>

<!-- Cadastrar -->
<p>
    <button type="button" class=" btn btn-primary btn-small" onclick="location.href='@Url.Action("Create","Acao")'">
        <i class="icon-plus icon-white icone "></i> Cadastrar
    </button>
</p>

<!-- Tabela de dados -->
<table width="100%">
    <tr>
        <th>
            Nome
        </th>
        <th>
            Etapa seguinte
        </th>
        <th>
            Atendente visualiza
        </th>
        <th>
            Usuário visualiza
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Acao.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EtapaSeguinte.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Acao.AtendenteVisualiza)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Acao.UsuarioVisualiza)
        </td>
        <td>
            <button type="button" class=" btn btn-info btn-mini" onclick="location.href='@Url.Action("Details", "Acao", new { id = item.Acao.AcaoId })'">
                <i class="icon-tasks icon-white icone"></i> Detalhes
            </button>
            <button type="button" class=" btn btn-warning btn-mini" onclick="location.href='@Url.Action("Edit", "Acao", new { id = item.Acao.AcaoId })'">
                <i class="icon-wrench icon-white icone"></i> Editar
            </button>
                <button type="button" class=" btn btn-danger btn-mini" onclick="location.href='@Url.Action("Delete", "Acao", new { id = item.Acao.AcaoId })'">
                <i class="icon-remove icon-white icone"></i> Excluir
            </button>
        </td>
    </tr>
}

</table>
